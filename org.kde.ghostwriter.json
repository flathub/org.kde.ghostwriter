{
    "app-id": "org.kde.ghostwriter",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "ghostwriter",
    "rename-icon": "ghostwriter",
    "finish-args": [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--env=QTWEBENGINEPROCESS_PATH=/app/bin/QtWebEngineProcess"
    ],
    "cleanup-commands": [
        "/app/cleanup-BaseApp.sh"
    ],
    "modules": [
        {
            "name": "cmark",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
