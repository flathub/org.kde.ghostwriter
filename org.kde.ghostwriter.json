{
    "app-id": "org.kde.ghostwriter",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "ghostwriter",
